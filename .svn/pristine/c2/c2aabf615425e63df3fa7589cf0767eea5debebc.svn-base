<script>
	import { ctx } from '../global'
	import Bus from '../bus.js'
	export default {
		data(){
			return{
				ifChangeExTime: 0,
				etime: '',
				pickerOptions0: { //日期
					disabledDate(time) {
						return time.getTime() < Date.now() - 8.64e7;
					}
				},
				changeExTimeUrl: '/api/connuser/changeExpectDate'
			}
		},
		name: 'timetable',
		props: ['showTimes'],   //从父组件中接收数据的方法
		mounted:function(){
			
		},
		methods:{
			showColor: function(percent){
				if (percent>66) {
		    		return 'exception'
		    	}
		    	if (percent<33) {
		    		return 'success'
		    	}else{
		    		return ''
		    	}
			},
			ifChangeExTimeFunc(){
				if (this.ifChangeExTime == 0) {
					this.ifChangeExTime = 1;
				} else{
					this.ifChangeExTime = 0;
				}
			},
			changeExTime(date){
				this.$http.post(ctx + this.changeExTimeUrl + "?caseId=" + this.$route.query.id + "&expectedDate=" + date)
				.then(res => {
					this.$message({
						message: '修改期望上线时间成功！',
						type: 'success'
					});
					this.showTimes.expectedDate = date;
					Bus.$emit('getTarget', event.target);
					this.$parent.i = this.$parent.i + 1;
				})
				this.ifChangeExTime = 0;
			}
//			cancelChangeExTime(){
//				this.ifChangeExTime = 0;
//			}
		}
	}
